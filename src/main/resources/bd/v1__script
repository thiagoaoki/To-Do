CREATE TABLE USUARIO (
  ID    INTEGER,
  LOGIN VARCHAR(45),
  SENHA VARCHAR(45),
  EMAIL VARCHAR(100)
);

ALTER TABLE USUARIO ADD PRIMARY KEY(ID);

CREATE TABLE TODO (
  ID INTEGER,
  TEXTO VARCHAR(1000),
  USUARIO INTEGER
);

ALTER TABLE TODO ADD PRIMARY KEY(ID);
ALTER TABLE TODO ADD CONSTRAINT FK_USU_TODO FOREIGN KEY(USUARIO) REFERENCES USUARIO(ID);

CREATE TABLE NOTA (
  ID INTEGER,
  TEXTO VARCHAR(1000),
  USUARIO INTEGER
);

ALTER TABLE NOTA ADD PRIMARY KEY(ID);
ALTER TABLE NOTA ADD CONSTRAINT FK_USU_NOTA FOREIGN KEY(USUARIO) REFERENCES USUARIO(ID);

CREATE TABLE TODO_DETALHE (
  ID INTEGER,
  DATA DATE,
  TODO INTEGER
);

ALTER TABLE TODO_DETALHE ADD PRIMARY KEY(ID);
ALTER TABLE TODO_DETALHE ADD CONSTRAINT FK_TODO_DET FOREIGN KEY(TODO) REFERENCES TODO(ID);